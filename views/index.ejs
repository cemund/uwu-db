<%- include('./partials/header.ejs') %>

<div class="noisy"></div>

<div class="d-sm-flex justify-content-sm-center align-items-center vh-100">
  <div class="bg-dark text-secondary px-4 py-5 text-center vw-100">
    <div class="py-5">
      <h1 class="display-5 fw-bold text-white">
        <img src="images/UwuDB.svg" alt="uwu db logo" height="140" />
      </h1>
      <div class="col-md-6 mx-auto">
        <p class="fs-5 mb-4">Search Anime and Manga for Free!</p>
        <form action="/" method="POST">
          <div class="input-group mb-4">
            <input
              type="text"
              class="form-control shadow-none"
              placeholder="Search"
              name="search"
              id="search"
            />
            <button class="btn btn-search" type="submit">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-search"
                viewBox="0 0 16 16"
              >
                <path
                  d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"
                />
              </svg>
            </button>
          </div>
        </form>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
          <a href="/top/anime"
            ><button
              type="button"
              class="btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold"
            >
              Top Anime
            </button></a
          >
          <a href="/top/manga"
            ><button
              type="button"
              class="btn btn-outline-light btn-lg px-4 me-sm-3 fw-bold"
            >
              Top Manga
            </button></a
          >
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
